rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonctions utilisateur
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             (getUserData().role == 'admin' || getUserData().role == 'super_admin');
    }
    
    function isSuperAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role == 'super_admin';
    }

    // Collection Utilisateurs (users)
    match /users/{userId} {
      // L'utilisateur peut lire son propre profil (Condition simplifiée pour éviter isAdmin si isOwner)
      allow read: if isSignedIn() && isOwner(userId);
      // L'admin peut tout lire
      allow read: if isAdmin();
      
      // Inscription : l'utilisateur peut créer son propre document.
      allow create: if isSignedIn() && isOwner(userId);
      
      // Mise à jour : 
      // - L'utilisateur peut modifier ses propres infos.
      // - Le 'super_admin' peut modifier n'importe quel utilisateur (ex: changer les rôles).
      // - L'admin "simple" peut lire mais pas forcément modifier les rôles des autres (selon besoins).
      allow update: if isSignedIn() && (isOwner(userId) || isSuperAdmin());  

      // Sous-collection notifications
      match /notifications/{notifId} {
        allow read, write: if isSignedIn() && isOwner(userId);
        allow read, write: if isAdmin();
      }
    }

    // Collection Demandes (requests)
    match /requests/{requestId} {
      // Le propriétaire peut lire ses demandes, l'admin peut tout lire.
      // Le propriétaire peut lire ses demandes, l'admin peut tout lire.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Le propriétaire peut créer une demande pour lui-même.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Seul l'Admin peut modifier une demande (pour changer le statut en 'approved' ou 'rejected').
      // Sauf pour la soumission des preuves de vérification de paiement par l'utilisateur.
      allow update: if isAdmin() || (
        isSignedIn() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'paymentVerificationStatus', 
            'paymentSelfieUrl', 
            'paymentVideoUrl', 
            'paymentVerificationSubmittedAt'
        ])
      ); 
    }

    // Collection Comptes (accounts)
    match /accounts/{accountId} {
       // Seul l'Admin peut créer des comptes
       allow create: if isAdmin();
       
       // Le propriétaire peut consulter son compte, l'admin aussi.
       allow read: if isSignedIn() && (
         ('userId' in resource.data && resource.data.userId == request.auth.uid) || 
         isAdmin()
       );
       
       // L'utilisateur peut mettre à jour son RIB. L'Admin peut tout modifier.
       allow update: if isSignedIn() && (
         (isOwner(resource.data.userId) && 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['iban', 'bankName', 'bic', 'ribEmail', 'updatedAt'])) ||
         isAdmin()
       );

       // L'admin doit pouvoir supprimer un compte lors d'une réinitialisation.
       allow delete: if isAdmin();
    }

    // Collection Virements (transfers)
    match /transfers/{transferId} {
      // Les admins peuvent tout lire, modifier et supprimer (pour validation et réinitialisation)
      allow read, update, delete: if isAdmin();
      
      // Les admins peuvent créer des transactions (ex: dépôt d'authentification)
      allow create: if isAdmin();
      
      // Les utilisateurs peuvent lire leurs propres virements
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Les utilisateurs peuvent créer un virement
      // Règle CRITIQUE : le statut doit être 'pending' lors de la création par un utilisateur
      allow create: if isSignedIn() && 
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.status == 'pending';
    }

    // Collection Chat (chats)
    match /chats/{userId} {
      // Un utilisateur peut lire et modifier son propre document de chat.
      // L'admin peut lire et modifier tous les documents.
      allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());

      // Sous-collection Messages
      match /messages/{messageId} {
        // Même logique pour les messages individuels.
        allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());
      }
    }
    
    // Refuser tout accès par défaut pour les autres collections non définies
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
